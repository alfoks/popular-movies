<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/pnlReview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="?attr/colorPrimaryDark"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="@string/placeholder_title" />

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAuthor"
        android:padding="8dp"
        tools:text="@string/placeholder_plot" />

    <TextView
        android:id="@+id/txtMore"
        android:layout_width="match_parent"
        android:layout_height="@dimen/review_default_height"
        android:layout_alignBottom="@id/txtContent"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_gradient" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txtContent"
        android:layout_alignTop="@id/txtAuthor"
        android:background="@drawable/background_click_selector" />

</RelativeLayout>
