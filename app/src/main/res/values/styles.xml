<resources>

    <style name="AppTheme"
        parent="Theme.AppCompat.NoActionBar" />

    <style name="Field" />

    <style name="Field.BaseFullWidth">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">
            @dimen/fragment_horizontal_margin
        </item>
        <item name="android:layout_marginLeft">
            @dimen/fragment_horizontal_margin
        </item>
        <item name="android:layout_marginTop">
            @dimen/field_vertical_separation_margin
        </item>
    </style>

    <style name="Field.FullWidth"
        parent="Field.BaseFullWidth" />

    <style name="Field.WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">
            @dimen/field_vertical_separation_margin
        </item>
    </style>

</resources>
